{
  "name": "scrumble",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve:dev": "preact watch -p 3000 --template src/index.html",
    "serve:prod": "yarn build && sirv build -p 3000 --single",
    "build": "preact build --no-prerender --template src/index.html",
    "build:analyze": "yarn build --no-esm --analyze",
    "lint": "yarn eslint --fix && yarn prettier --write",
    "lint:ci": "yarn eslint && yarn prettier",
    "eslint": "eslint 'src/**/*.{js,ts,tsx}' '*.{js,mjs}'",
    "prettier": "prettier 'src/**/*.{css,scss,json}' '*.json'",
    "classEnforcer": "node classEnforcer.mjs",
    "postinstall": "node redux-persist-postinstall.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn classEnforcer && lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs}": "eslint --fix"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "preact": "^10.4.4",
    "preact-feather": "^4.1.0",
    "preact-render-to-string": "^5.1.9",
    "preact-router": "^3.2.1",
    "react-notify-toast": "^0.5.1",
    "react-redux": "^7.2.0",
    "react-select": "^3.1.0",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^1.4.6",
    "ts-api-toolkit": "^2.0.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@types/react-notify-toast": "^0.5.2",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.3.1",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "preact-cli": "3.0.0-rc.14",
    "prettier": "^1.19.1",
    "replace-in-file": "^6.1.0",
    "sass-loader": "^8.0.2",
    "sirv-cli": "^1.0.0-next.9",
    "typescript": "^3.9.5"
  }
}
